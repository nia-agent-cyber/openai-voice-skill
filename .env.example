# OpenAI Voice Skill Configuration

# Required: Your OpenAI API key
OPENAI_API_KEY=sk-...

# Required: Your OpenAI project ID (from platform.openai.com/settings)
OPENAI_PROJECT_ID=proj_...

# Optional: Webhook signature secret (for production)
# Generate with: openssl rand -hex 32
WEBHOOK_SECRET=

# Optional: Server port (default: 8080)
PORT=8080

# Required for outbound calls: Twilio credentials
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...

# Optional: Twilio phone number for caller ID (format: +1234567890)
TWILIO_PHONE_NUMBER=+1234567890

# Call Recording Configuration
# Enable/disable call recording (default: true)
ENABLE_RECORDING=true

# Enable/disable transcription (default: true)  
ENABLE_TRANSCRIPTION=true

# Directory for storing recordings (default: recordings/)
RECORDINGS_DIR=recordings

# Database path for call history (default: call_history.db)
DATABASE_PATH=call_history.db

# Maximum recording file size in MB (default: 100)
MAX_RECORDING_SIZE_MB=100

# Function Calling Configuration
# Enable/disable function calling during conversations (default: true)
ENABLE_FUNCTION_CALLING=true

# Timeout for function execution in seconds (default: 30)
FUNCTION_TIMEOUT_SECONDS=30

# OpenClaw Integration (optional - for advanced function calling)
# OpenClaw API URL (default: http://localhost:8080)
OPENCLAW_API_URL=http://localhost:8080

# OpenClaw API key for authenticated tool access
OPENCLAW_API_KEY=your_openclaw_api_key_here

# Session Memory Configuration
# Enable/disable persistent conversation memory (default: true)
ENABLE_SESSION_MEMORY=true

# Database path for session memory (default: session_memory.db)
MEMORY_DATABASE_PATH=session_memory.db

# How long to keep session memory in days (default: 30)
MEMORY_RETENTION_DAYS=30

# Maximum memory entries per session (default: 100)
MAX_MEMORY_ENTRIES_PER_SESSION=100

# Maximum length of context summary for agent (default: 500)
CONTEXT_SUMMARY_LENGTH=500
